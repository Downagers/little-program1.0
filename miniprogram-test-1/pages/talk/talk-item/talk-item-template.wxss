.post-container{
    display:flex;
    flex-direction:column;
    margin-top:20rpx;
    margin-bottom:40rpx;
    background-color:#fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}

.post-author{
    width:60rpx;
    height: 60rpx;
    vertical-align:middle;
    margin-left: 1 0rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  vertical-align:middle;
  margin-bottom:5px;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.post-date{
    margin-left: 20rpx;
    vertical-align:middle;
    margin-bottom:5px;
    font-size: 26rpx;
}

.post-title{
    font-size:34rpx;
    font-weight:600;
    color:#333;
    margin-bottom: 10px;
    margin-top: 6px;
    margin-left: 10px;
}

.post-image{
    margin-left: 2px;
    width: 33.3%;
    height:180rpx;
    /* margin: auto 0; */
    margin-bottom:10px;
}

.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left:20rpx;
    letter-spacing:2rpx;
    line-height:40rpx;
}

.post-like{
    font-size: 13px;
    flex-direction:row;
    line-height:16px;
    margin-left:5px;
}

.post-like-image{
    height:16px;
    width:16px;
    margin-right:5px;
    vertical-align:middle;
    float: right;
}

.post-like-font{
    vertical-align: middle;
    margin-right: 10px;
    float: right;
}
